<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="100dp"
    android:layout_height="wrap_content"
    android:background="@color/insta_blue">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_search_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search_bar"
            android:layout_centerHorizontal="true"/>
        <com.kutaycandan.instainsight.widget.edittext.HurmeRegularObliqueEditText
            android:id="@+id/et_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="13sp"
            android:hint="Search Instagram Usernames"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_search_bar"
            android:layout_marginTop="-28dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_go"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search_go"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:gravity="center">
            <com.kutaycandan.instainsight.widget.textview.HurmeSemiBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go!"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_recent_searches"
            android:layout_width="200dp"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">
            <com.kutaycandan.instainsight.widget.textview.HurmeRegularObliqueTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:text="Recent Searches"
                android:textColor="@color/white"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_recent_users"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            <com.kutaycandan.instainsight.widget.textview.HurmeRegularObliqueTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="5sp"
                android:padding="5dp"
                android:text="Clear Searches"/>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>