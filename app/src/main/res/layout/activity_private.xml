<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/insta_blue">
    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_coin"
            android:layout_gravity="center_vertical"/>
        <com.mirvinstalk.app.widget.textview.HurmeBoldTextView
            android:id="@+id/tv_my_stalks"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My stalks: "
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <com.mirvinstalk.app.widget.textview.HurmeRegularTextView
        android:id="@+id/tv_insta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/insta_stalk"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:layout_marginTop="240px"
        android:textColor="@color/white"
        android:layout_marginBottom="50dp"/>


    <LinearLayout
        android:layout_below="@+id/tv_insta"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/insta_blue"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_main_warning_top"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_warning_white" />
            <com.mirvinstalk.app.widget.textview.HurmeBoldTextView
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="Oops!" />
            <com.mirvinstalk.app.widget.textview.HurmeRegularTextView
                android:id="@+id/text1"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="Sorry, you canâ€™t stalk this profile" />

            <com.mirvinstalk.app.widget.textview.HurmeRegularTextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="as it is private." />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:background="@drawable/background_main_warning_bot">

            <com.mirvinstalk.app.widget.textview.HurmeBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="Go Back" />
        </LinearLayout>


    </LinearLayout>



</RelativeLayout>