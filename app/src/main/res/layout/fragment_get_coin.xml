<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/insta_blue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_coin"
                android:layout_gravity="center_vertical"/>
            <com.kutaycandan.instainsight.widget.textview.HurmeBoldTextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My stalks: "
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <com.kutaycandan.instainsight.widget.textview.HurmeRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="InstaInsight"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"/>



    </LinearLayout>

</ScrollView>